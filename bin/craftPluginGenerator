#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../vendor/autoload.php')) {
    require __DIR__.'/../vendor/autoload.php';
}
require __DIR__.'/../commands/MakePlugin.php';
require __DIR__.'/../classes/StringHelper.php';
require __DIR__.'/../classes/FileSystemHelper.php';
require __DIR__.'/../classes/ContentHelper.php';

$app = new Symfony\Component\Console\Application('Craft Plugin Generator', '1.0.0');
$app->add(new CraftPluginGenerator\Commands\MakePlugin());
$app->run();